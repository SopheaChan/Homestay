                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/tvBookingRecordRoomQty"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvBookingRecordRoomQty" />

                        <TextView
                            android:id="@+id/textView43"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/alike"
                            android:text="Guests"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/tvBookingRecordNumOfGuests"
                            app:layout_constraintStart_toEndOf="@id/tvBookingRecordNumOfGuests"
                            app:layout_constraintTop_toTopOf="@id/tvBookingRecordNumOfGuests" />

                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
