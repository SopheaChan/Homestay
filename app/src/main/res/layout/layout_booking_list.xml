                        <TextView
                            android:id="@+id/tvBookingRecordRoomQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/alike"
                            android:text="1"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@+id/textView37"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvBookingRecordNumOfGuests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alike"
                            android:text="2"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/tvBookingRecordRoomQty"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/tvBookingRecordRoomQty"
                            app:layout_constraintTop_toBottomOf="@+id/tvBookingRecordRoomQty" />

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginEnd="32dp"
                            android:fontFamily="@font/alike"
